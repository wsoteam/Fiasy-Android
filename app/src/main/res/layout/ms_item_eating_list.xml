<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvTitleOfEatingCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/roboto_light"
                android:text="Завтрак"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.49" />

            <ImageButton
                android:id="@+id/imbAddFood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:backgroundTint="@color/white"
                android:src="@drawable/add_new_food_main_activity"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvSumProt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/roboto"
                android:text="B"
                android:textColor="@color/b_color"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/tvTitleOfEatingCard"
                app:layout_constraintEnd_toStartOf="@+id/tvSumFats"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/tvTitleOfEatingCard"
                app:layout_constraintTop_toTopOf="@+id/tvTitleOfEatingCard" />

            <TextView
                android:id="@+id/tvSumFats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:text="G"
                android:textColor="@color/g_color"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/tvTitleOfEatingCard"
                app:layout_constraintEnd_toStartOf="@+id/tvSumCarbo"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/tvSumProt"
                app:layout_constraintTop_toTopOf="@+id/tvTitleOfEatingCard" />

            <TextView
                android:id="@+id/tvSumCarbo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/roboto"
                android:text="U"
                android:textColor="@color/u_color"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/tvTitleOfEatingCard"
                app:layout_constraintEnd_toStartOf="@+id/imbAddFood"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/tvSumFats"
                app:layout_constraintTop_toTopOf="@+id/tvTitleOfEatingCard" />

        </android.support.constraint.ConstraintLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvListOfFoodEatingCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvSumOfKcal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:text="486 Ккал"
            android:fontFamily="@font/roboto"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <ImageButton
            android:id="@+id/ibtnOpenList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:src="@drawable/open_eating_list" />

    </LinearLayout>
</android.support.v7.widget.CardView>

