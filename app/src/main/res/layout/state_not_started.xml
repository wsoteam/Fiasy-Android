<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/starvationNotActivated"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <TextView
            android:id="@+id/starvationTitle"
            app:layout_constraintEnd_toStartOf="@+id/edit"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="14dp"
            android:fontFamily="sans-serif-medium"
            android:lineSpacingExtra="4.5sp"
            android:text="@string/starvation_title"
            android:textColor="#c0000000"
            android:textSize="18sp"
            android:textStyle="normal" />

        <ImageView
            android:id="@+id/imageView98"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/starvationTitle"
            app:srcCompat="@drawable/img_starvation_start"
            android:layout_width="234dp"
            android:layout_height="120dp" />

        <TextView
            android:id="@+id/textBtn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView98"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:lineSpacingExtra="4sp"
            android:text="@string/starvation_start"
            android:textAllCaps="true"
            android:textColor="#f49231"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="начать" />

        <ImageView
            android:id="@+id/edit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_pencil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="11dp"
            android:clickable="true"
            android:focusable="true"
            android:padding="5dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

