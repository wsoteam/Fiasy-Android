<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="16dp"
    tools:layout_height="wrap_content"
    tools:parentTag="com.wsoteam.diet.views.PremiumPlanCardView2"
    tools:layout_marginLeft="16dp"
    tools:layout_marginRight="16dp"
    tools:layout_marginTop="16dp"
    tools:layout_marginBottom="16dp"
    >
    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="193dp"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginRight="16dp"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/diamond_style"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_silver_diamond"
                />

            <TextView
                android:id="@+id/duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="4sp"
                android:textColor="#a6000000"
                android:textSize="22sp"
                android:textStyle="bold"
                tools:text="3 месяца"
                />

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="18sp"
                android:textColor="#c0000000"
                android:textSize="18sp"
                tools:text="949₽"
                />

            <TextView
                android:id="@+id/helper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="4.2sp"
                android:textColor="#8a000000"
                android:textSize="14sp"
                android:textStyle="normal"
                tools:text="316₽/месяц"
                />

            <TextView
                android:id="@+id/helper2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="4.2sp"
                android:textColor="#8a000000"
                android:textSize="14sp"
                android:textStyle="normal"
                tools:text="316₽/месяц"
                />

        </LinearLayout>

        <ImageView
            android:id="@+id/benefits_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_rounded_triangle_premium"
            android:tint="#000"
            />

        <TextView
            android:id="@+id/benefits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Выгода\n50%"
            android:textAllCaps="true"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="4dp"
            android:textSize="10sp"
            android:rotation="-45"
            android:gravity="center"
            android:textColor="@color/white"
            />

    </FrameLayout>
</merge>