<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="16dp"
    app:cardBackgroundColor="@color/cardview_light_background"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


  <androidx.constraintlayout.widget.ConstraintLayout
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:padding="16dp"
      >

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="20sp"
        android:paddingBottom="12dp"
        android:fontFamily="sans-serif-medium"
        android:textStyle="normal"
        android:textColor="#d9424242"
        tools:text="Ежедненая норма"
        />


    <TextView
        android:id="@+id/progress_hint_1"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/progress_hint_3"
        app:layout_constraintTop_toBottomOf="@+id/title"
        android:text="@string/daily_widget_calories_eaten"
        android:gravity="left"
        style="@style/DailyBurnedLabel"
        />

    <TextView
        android:id="@+id/progress_hint_3"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintLeft_toRightOf="@id/progress_hint_1"
        app:layout_constraintRight_toLeftOf="@id/progress_hint_5"
        android:text="@string/daily_widget_calories_burned"
        style="@style/DailyBurnedLabel"
        />

    <TextView
        android:id="@+id/progress_hint_5"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/progress_hint_3"
        style="@style/DailyBurnedLabel"
        android:gravity="right"
        android:text="@string/daily_widget_calories_left"
        />

    <ProgressBar
        android:id="@+id/total_progress"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:progressDrawable="@drawable/progress_bar_main"
        android:layout_marginTop="12dp"
        android:progress="16"
        app:layout_constraintTop_toBottomOf="@id/progress_hint_1"
        style="?android:attr/progressBarStyleHorizontal"
        />

    <TextView
        android:id="@+id/progress_label_eaten"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/progress_label_burned"
        app:layout_constraintTop_toBottomOf="@+id/total_progress"
        tools:text="1120"
        android:gravity="left"
        android:textColor="#d9424242"
        android:textStyle="bold"
        style="@style/DailyBurnedLabel"
        />

    <TextView
        android:id="@+id/progress_label_burned"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/total_progress"
        app:layout_constraintLeft_toRightOf="@id/progress_label_eaten"
        app:layout_constraintRight_toLeftOf="@id/progress_label_left"
        tools:drawableRight="@drawable/ic_calories_burned_fire"
        tools:text="1120"
        android:textColor="#d9424242"
        android:textStyle="bold"
        style="@style/DailyBurnedLabel"
        />

    <TextView
        android:id="@+id/progress_label_left"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/total_progress"
        app:layout_constraintLeft_toRightOf="@id/progress_label_burned"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="1120"
        android:textColor="#d9424242"
        android:textStyle="bold"
        style="@style/DailyBurnedLabel"
        android:gravity="right"
        />

    <com.wsoteam.diet.views.ExperienceProgressView
        android:id="@+id/progress_protein"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginTop="8dp"
        app:label="Белки (г)"
        tools:value="pidor"
        tools:progress="90"
        tools:max="100"
        app:layout_constraintTop_toBottomOf="@id/progress_label_eaten"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/progress_carbons"
        />

    <com.wsoteam.diet.views.ExperienceProgressView
        android:id="@+id/progress_carbons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginTop="8dp"
        app:label="Углеводы (г)"
        tools:value="pidor"
        tools:progress="40"
        tools:max="100"
        app:layout_constraintTop_toBottomOf="@id/progress_label_eaten"
        app:layout_constraintLeft_toRightOf="@id/progress_protein"
        app:layout_constraintRight_toRightOf="@id/progress_fats"
        />

    <com.wsoteam.diet.views.ExperienceProgressView
        android:id="@+id/progress_fats"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginTop="8dp"
        app:label="Жиры (г)"
        tools:value="pidor"
        tools:progress="10"
        tools:max="100"
        app:layout_constraintTop_toBottomOf="@id/progress_label_eaten"
        app:layout_constraintLeft_toRightOf="@id/progress_carbons"
        app:layout_constraintRight_toRightOf="parent"
        />

  </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>