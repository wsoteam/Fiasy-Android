<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    >

  <LinearLayout
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/close"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="right"
        android:padding="16dp"
        android:tint="#717171"
        app:srcCompat="@drawable/ic_close"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:lineSpacingExtra="8dp"
        android:text="@string/onboard_plan_title"
        android:textColor="#000"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:lineSpacingExtra="8dp"
        android:text="@string/onboard_plan_subtitle"
        android:textColor="#c0000000"
        android:textSize="17sp"
        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="horizontal"
        >
      <com.wsoteam.diet.views.OnboardUserCardView
          android:id="@+id/height"
          android:layout_width="112dp"
          android:layout_height="78dp"
          android:layout_marginRight="20dp"
          android:background="@drawable/onboard_user_card_background"
          android:elevation="1dp"
          android:outlineProvider="background"
          android:padding="16dp"
          android:translationZ="1dp"
          app:text="Рост, см"
          tools:value="174"
          />
      <com.wsoteam.diet.views.OnboardUserCardView
          android:id="@+id/weight"
          android:layout_width="112dp"
          android:layout_height="78dp"
          android:layout_marginRight="20dp"
          android:layout_weight="4"
          android:background="@drawable/onboard_user_card_background"
          android:elevation="1dp"
          android:outlineProvider="background"
          android:padding="16dp"
          android:translationZ="1dp"
          app:text="Вес, кг"
          tools:value="174"
          />
      <com.wsoteam.diet.views.OnboardUserCardView
          android:id="@+id/age"
          android:layout_width="112dp"
          android:layout_height="78dp"
          android:background="@drawable/onboard_user_card_background"
          android:elevation="1dp"
          android:outlineProvider="background"
          android:padding="16dp"
          android:translationZ="1dp"
          app:text="Возраст"
          tools:value="174"
          />

    </LinearLayout>


    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:background="@drawable/onboard_user_card_background"
        android:elevation="1dp"
        android:outlineProvider="background"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        android:orientation="vertical"
        android:translationZ="1dp">

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:lineSpacingExtra="8dp"
          android:text="@string/onboard_recommended_plan"
          android:textColor="#000"
          android:textSize="16sp"
          />


      <androidx.cardview.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="16dp"
          app:cardElevation="0dp"
          app:cardCornerRadius="16dp"
          app:cardPreventCornerOverlap="false"
          app:cardUseCompatPadding="true"
          >

        <ImageView
            android:id="@+id/recommended_plan_image"
            android:layout_width="wrap_content"
            android:layout_height="168dp"
            android:scaleType="centerCrop"
            tools:src="@drawable/onboard_plan_background_recommended_plan"
            />

        <LinearLayout
            android:background="#47000000"
            android:layout_gravity="bottom"
            android:padding="8dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="3-х недельная диета Кето"
              android:textSize="14sp"
              android:textColor="#d9ffffff"
              />

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="28 дней"
              android:textSize="14sp"
              android:layout_marginTop="4dp"
              android:textColor="#d9ffffff"
              />

        </LinearLayout>

      </androidx.cardview.widget.CardView>
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:lineSpacingExtra="8dp"
        android:text="@string/onboard_plan_start_loosing_weight"
        android:layout_marginTop="32dp"
        android:textColor="#000"
        android:textSize="20sp"
        android:textStyle="bold"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


      <LinearLayout
          android:id="@+id/first_line"
          android:layout_centerHorizontal="true"
          android:orientation="horizontal"
          android:layout_marginTop="8dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="8dp"
            android:layout_gravity="bottom"
            app:srcCompat="@drawable/ic_checkmark"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="8dp"
            android:layout_gravity="center_vertical"
            android:text="@string/onboard_plan_guaranteed_result"
            android:textColor="#000"
            android:textSize="16sp"
            />
      </LinearLayout>

      <LinearLayout
          android:id="@+id/second_line"
          android:layout_gravity="center"
          android:orientation="horizontal"
          android:layout_below="@id/first_line"
          android:layout_alignLeft="@id/first_line"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="8dp"
            android:layout_gravity="bottom"
            app:srcCompat="@drawable/ic_checkmark"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="8dp"
            android:layout_gravity="center_vertical"
            android:text="@string/onboard_plan_simple_meals"
            android:textColor="#000"
            android:textSize="16sp"
            />
      </LinearLayout>

      <LinearLayout
          android:id="@+id/third_line"
          android:layout_gravity="center"
          android:orientation="horizontal"
          android:layout_below="@id/second_line"
          android:layout_alignLeft="@id/first_line"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="8dp"
            android:layout_gravity="bottom"
            app:srcCompat="@drawable/ic_checkmark"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="8dp"
            android:layout_gravity="center_vertical"
            android:text="@string/onboard_plan_3week_plan"
            android:textColor="#000"
            android:textSize="16sp"
            />
      </LinearLayout>

      <LinearLayout
          android:id="@+id/forth_line"
          android:layout_gravity="center"
          android:orientation="horizontal"
          android:layout_below="@id/third_line"
          android:layout_alignLeft="@id/first_line"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="8dp"
            android:layout_gravity="bottom"
            app:srcCompat="@drawable/ic_checkmark"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="8dp"
            android:layout_gravity="center_vertical"
            android:text="@string/onboard_plan_full_purchases_list"
            android:textColor="#000"
            android:textSize="16sp"
            />
      </LinearLayout>

      <LinearLayout
          android:id="@+id/fivth_line"
          android:layout_gravity="center"
          android:orientation="horizontal"
          android:layout_below="@id/forth_line"
          android:layout_alignLeft="@id/first_line"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="8dp"
            android:layout_gravity="bottom"
            app:srcCompat="@drawable/ic_checkmark"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="8dp"
            android:layout_gravity="center_vertical"
            android:text="@string/onboard_plan_3_receipes_per_day"
            android:textColor="#000"
            android:textSize="16sp"
            />
      </LinearLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/next"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="32dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/onboard_plan_try"
        style="@style/Question.NextButton"
        android:layout_gravity="center_horizontal"
        />

  </LinearLayout>
</androidx.core.widget.NestedScrollView>