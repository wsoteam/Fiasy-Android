<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvGroupName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvAllRecipes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="Посмотреть все рецепты"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tvGroupName">

        <!-- Enclosing box to layout the two groups.-->
        <LinearLayout
            android:id="@+id/group_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="9dp"
            android:paddingLeft="9dp"
            android:paddingBottom="20dp"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:id="@+id/cvRecipe1"
                android:layout_width="160dp"
                android:layout_height="190dp"
                app:cardElevation="5dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageRecipe1"
                        android:layout_width="match_parent"
                        android:layout_height="128dp"
                        app:srcCompat="@drawable/ad_breakfast" />

                    <TextView
                        android:id="@+id/textRecipe1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="TextView"
                        android:textAlignment="center" />
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cvRecipe2"
                android:layout_width="160dp"
                android:layout_height="190dp"
                app:cardElevation="5dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageRecipe2"
                        android:layout_width="match_parent"
                        android:layout_height="128dp"
                        app:srcCompat="@drawable/ad_breakfast" />

                    <TextView
                        android:id="@+id/textRecipe2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="TextView"
                        android:textAlignment="center" />
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cvRecipe3"
                android:layout_width="160dp"
                android:layout_height="190dp"
                app:cardElevation="5dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageRecipe3"
                        android:layout_width="match_parent"
                        android:layout_height="128dp"
                        app:srcCompat="@drawable/ad_breakfast" />

                    <TextView
                        android:id="@+id/textRecipe3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="TextView"
                        android:textAlignment="center" />
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cvRecipe4"
                android:layout_width="160dp"
                android:layout_height="190dp"
                app:cardElevation="5dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageRecipe4"
                        android:layout_width="match_parent"
                        android:layout_height="128dp"
                        app:srcCompat="@drawable/ad_breakfast" />

                    <TextView
                        android:id="@+id/textRecipe4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="TextView"
                        android:textAlignment="center" />
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cvRecipe5"
                android:layout_width="160dp"
                android:layout_height="190dp"
                app:cardElevation="5dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageRecipe5"
                        android:layout_width="match_parent"
                        android:layout_height="128dp"
                        app:srcCompat="@drawable/ad_breakfast" />

                    <TextView
                        android:id="@+id/textRecipe5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="TextView"
                        android:textAlignment="center" />
                </LinearLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>
    </HorizontalScrollView>

</android.support.constraint.ConstraintLayout>