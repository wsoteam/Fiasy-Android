<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="317dp"
        android:layout_margin="8dp"
        android:layout_height="190dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="1dp"
        app:cardBackgroundColor="#ffe978">

        <androidx.cardview.widget.CardView
            android:layout_width="315dp"
            android:layout_gravity="center"
            android:layout_height="188dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/inapp_slide_gradient"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="52dp"
                    android:src="@drawable/ic_slide_diamond"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/white"
                    android:layout_gravity="center_horizontal"
                    android:text="3 дня бесплатно"
                    android:layout_marginTop="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Подписка на 3 месяца 699 ₽"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:text="233 ₽ в месяц "
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="18dp"/>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

</FrameLayout>