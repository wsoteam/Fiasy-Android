<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddEating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:scaleType="center"
        android:src="@drawable/ic_chat_speech_bubbles"
        app:backgroundTint="@color/fab_main_activity"
        app:borderWidth="0dp"
        app:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/gradient_main"
        app:layout_constraintTop_toTopOf="parent" />

    <com.github.jhonnyx2012.horizontalpicker.HorizontalPicker
        android:id="@+id/datePicker"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/ivCalendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/textView138"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView138"
        app:srcCompat="@drawable/ic_calendar_small"/>

    <TextView
        android:id="@+id/textView138"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="28dp"
        android:background="@drawable/bg_main_topbar_days"
        android:gravity="center"
        android:letterSpacing="0.04"
        android:lineSpacingExtra="0.5sp"
        android:paddingStart="15dp"
        android:paddingTop="4dp"
        android:paddingEnd="15dp"
        android:paddingBottom="4dp"
        android:textColor="@color/b_color"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/datePicker"
        tools:text="21 день подряд ведется запись"/>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="130dp"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/mainappbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:fitsSystemWindows="true"
            >

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsingToolbarLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                app:expandedTitleMarginEnd="5dp"
                app:expandedTitleMarginStart="5dp"
                app:expandedTitleTextAppearance="@style/TextAppearance.AppCompat.Subhead"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvParams"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        app:cardCornerRadius="24dp"
                        app:cardElevation="3dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingBottom="20dp">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/tvCaloriesNeed"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/roboto_bold"
                                    android:gravity="center"
                                    android:text="@string/main_screen_topbar_left"
                                    android:textColor="#f2812d"
                                    android:textSize="20sp"
                                    app:layout_constraintStart_toStartOf="@+id/textView132"
                                    app:layout_constraintTop_toBottomOf="@+id/textView132"
                                    tools:text="@string/main_screen_topbar_left" />

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/btnNotification"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="3dp"
                                    android:visibility="gone"
                                    app:layout_constraintStart_toEndOf="@id/tvCaloriesNeed"
                                    app:layout_constraintTop_toTopOf="@id/tvCaloriesNeed"
                                    app:srcCompat="@drawable/ic_error" />

                                <ProgressBar
                                    android:id="@+id/pbCalories"
                                    style="?android:attr/progressBarStyleHorizontal"
                                    android:layout_width="0dp"
                                    android:layout_height="8dp"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginEnd="20dp"
                                    android:indeterminate="false"
                                    android:progressDrawable="@drawable/progress_bar_calories"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/tvDoneText"
                                    tools:max="100"
                                    tools:progress="50" />

                                <TextView
                                    android:id="@+id/tvDoneText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginTop="8dp"
                                    android:fontFamily="@font/roboto"
                                    android:text="@string/main_screen_topbar_calories"
                                    android:textColor="#8a000000"
                                    android:textSize="14sp"
                                    android:textStyle="normal"
                                    app:layout_constraintStart_toStartOf="@+id/pbCalories"
                                    app:layout_constraintTop_toBottomOf="@+id/tvCaloriesNeed" />

                                <TextView
                                    android:id="@+id/tvLeftText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="5dp"
                                    android:fontFamily="@font/roboto"
                                    android:text="@string/main_screen_topbar_calories_left"
                                    android:textColor="#8a000000"
                                    android:textSize="14sp"
                                    app:layout_constraintEnd_toEndOf="@+id/pbCalories"
                                    app:layout_constraintTop_toBottomOf="@+id/divider31" />

                                <TextView
                                    android:id="@+id/tvCaloriesDone"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:fontFamily="@font/roboto_medium"
                                    android:letterSpacing="0.04"
                                    android:lineSpacingExtra="0.6sp"
                                    android:textColor="#d9424242"
                                    android:textSize="16sp"
                                    app:layout_constraintEnd_toEndOf="@+id/tvDoneText"
                                    app:layout_constraintStart_toStartOf="@+id/tvDoneText"
                                    app:layout_constraintTop_toBottomOf="@id/pbCalories"
                                    tools:text="930" />

                                <TextView
                                    android:id="@+id/tvCaloriesBurn"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:fontFamily="@font/roboto_light"
                                    android:gravity="center"
                                    android:text="0\nсожжено"
                                    android:textColor="@color/gray3"
                                    android:textSize="12sp"
                                    android:visibility="gone"
                                    app:layout_constraintEnd_toStartOf="@+id/tvCaloriesNeed"
                                    app:layout_constraintStart_toEndOf="@+id/tvCaloriesDone"
                                    app:layout_constraintTop_toBottomOf="@id/pbCalories" />

                                <TextView
                                    android:id="@+id/tvCaloriesLeft"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:fontFamily="@font/roboto_medium"
                                    android:letterSpacing="0.04"
                                    android:lineSpacingExtra="0.6sp"
                                    android:textColor="#d9424242"
                                    android:textSize="16sp"
                                    app:layout_constraintEnd_toEndOf="@+id/tvLeftText"
                                    app:layout_constraintStart_toStartOf="@+id/tvLeftText"
                                    app:layout_constraintTop_toBottomOf="@id/pbCalories"
                                    tools:text="800" />

                                <TextView
                                    android:id="@+id/textView132"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="16dp"
                                    android:layout_marginTop="12dp"
                                    android:fontFamily="@font/roboto_medium"
                                    android:text="Ежедневная норма ="
                                    android:textColor="#d9424242"
                                    android:textSize="20sp"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <View
                                    android:id="@+id/divider31"
                                    android:layout_width="0dp"
                                    android:layout_height="1dp"
                                    android:background="#f2812d"
                                    app:layout_constraintEnd_toEndOf="@+id/tvCaloriesNeed"
                                    app:layout_constraintStart_toStartOf="@+id/tvCaloriesNeed"
                                    app:layout_constraintTop_toBottomOf="@+id/tvCaloriesNeed" />

                                <TextView
                                    android:id="@+id/tvReports"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="24dp"
                                    android:background="@drawable/filter_state"
                                    android:drawableRight="@drawable/ic_arrow_report"
                                    android:drawablePadding="8dp"
                                    android:fontFamily="@font/roboto_medium"
                                    android:lineSpacingExtra="7sp"
                                    android:text="@string/reports"
                                    android:visibility="gone"
                                    android:textColor="#ef7d02"
                                    app:layout_constraintBottom_toBottomOf="@+id/textView132"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="@+id/textView132" />
                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:layout_scrollFlags="scroll|enterAlwaysCollapsed">

                                <ProgressBar
                                    android:id="@+id/pbProt"
                                    style="?android:attr/progressBarStyleHorizontal"
                                    android:layout_width="90dp"
                                    android:layout_height="8dp"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginTop="40dp"
                                    android:progressDrawable="@drawable/progress_bar_main"
                                    app:layout_constraintEnd_toStartOf="@+id/pbFat"
                                    app:layout_constraintHorizontal_bias="0.5"
                                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    tools:max="100"
                                    tools:progress="50" />

                                <ProgressBar
                                    android:id="@+id/pbFat"
                                    style="?android:attr/progressBarStyleHorizontal"
                                    android:layout_width="90dp"
                                    android:layout_height="8dp"
                                    android:progressDrawable="@drawable/progress_bar_main"
                                    app:layout_constraintEnd_toStartOf="@+id/pbCarbo"
                                    app:layout_constraintHorizontal_bias="0.5"
                                    app:layout_constraintStart_toEndOf="@+id/pbProt"
                                    app:layout_constraintTop_toTopOf="@id/pbProt"
                                    tools:max="100"
                                    tools:progress="50" />

                                <ProgressBar
                                    android:id="@+id/pbCarbo"
                                    style="?android:attr/progressBarStyleHorizontal"
                                    android:layout_width="90dp"
                                    android:layout_height="8dp"
                                    android:layout_marginEnd="20dp"
                                    android:progressDrawable="@drawable/progress_bar_main"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toEndOf="@+id/pbFat"
                                    app:layout_constraintTop_toTopOf="@id/pbProt"
                                    tools:max="100"
                                    tools:progress="50" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="5dp"
                                    android:fontFamily="@font/roboto"
                                    android:text="@string/main_screen_topbar_prot"
                                    android:textColor="#80424242"
                                    app:layout_constraintBottom_toTopOf="@+id/pbProt"
                                    app:layout_constraintEnd_toEndOf="@+id/pbProt"
                                    app:layout_constraintStart_toStartOf="@+id/pbProt" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="5dp"
                                    android:fontFamily="@font/roboto"
                                    android:text="@string/main_screen_topbar_fat"
                                    android:textColor="#80424242"
                                    app:layout_constraintBottom_toTopOf="@+id/pbFat"
                                    app:layout_constraintEnd_toEndOf="@+id/pbFat"
                                    app:layout_constraintStart_toStartOf="@+id/pbFat" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="5dp"
                                    android:fontFamily="@font/roboto"
                                    android:text="@string/main_screen_topbar_carbo"
                                    android:textColor="#80424242"
                                    app:layout_constraintBottom_toTopOf="@+id/pbCarbo"
                                    app:layout_constraintEnd_toEndOf="@+id/pbCarbo"
                                    app:layout_constraintStart_toStartOf="@+id/pbCarbo" />

                                <TextView
                                    android:id="@+id/tvProt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:fontFamily="@font/roboto_medium"
                                    android:textColor="#d9424242"
                                    android:textSize="16sp"
                                    app:layout_constraintEnd_toEndOf="@+id/pbProt"
                                    app:layout_constraintStart_toStartOf="@+id/pbProt"
                                    app:layout_constraintTop_toBottomOf="@+id/pbProt"
                                    tools:text="0 из 345 г" />

                                <TextView
                                    android:id="@+id/tvFat"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:fontFamily="@font/roboto_medium"
                                    android:textColor="#d9424242"
                                    android:textSize="16sp"
                                    app:layout_constraintEnd_toEndOf="@+id/pbFat"
                                    app:layout_constraintStart_toStartOf="@+id/pbFat"
                                    app:layout_constraintTop_toBottomOf="@+id/pbFat"
                                    tools:text="5 из 250 г" />

                                <TextView
                                    android:id="@+id/tvCarbo"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:fontFamily="@font/roboto_medium"
                                    android:textColor="#d9424242"
                                    android:textSize="16sp"
                                    app:layout_constraintEnd_toEndOf="@+id/pbCarbo"
                                    app:layout_constraintStart_toStartOf="@+id/pbCarbo"
                                    app:layout_constraintTop_toBottomOf="@+id/pbCarbo"
                                    tools:text="124 из 667 г" />

                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        android:background="@color/white" />
                </LinearLayout>
            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <LinearLayout
            android:id="@+id/llSum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/llHead"
                android:layout_width="match_parent"
                android:layout_height="81dp"
                android:background="@color/white"
                android:elevation="10dp"
                android:paddingBottom="8dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tvLeft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/gray3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="@string/main_screen_topbar_left" />

                <TextView
                    android:id="@+id/tvCaloriesCollapsed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/total_title"
                    app:layout_constraintBottom_toTopOf="@id/tvCaloriesTitleCollapsed"
                    app:layout_constraintEnd_toEndOf="@id/tvCaloriesTitleCollapsed"
                    app:layout_constraintStart_toStartOf="@id/tvCaloriesTitleCollapsed"
                    tools:text="800" />

                <TextView
                    android:id="@+id/tvCaloriesTitleCollapsed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/roboto_light"
                    android:text="@string/main_screen_topbar_calories"
                    android:textColor="@color/gray3"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/tvProtTitleCollapsed"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvLeft" />

                <TextView
                    android:id="@+id/tvProtCollapsed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/total_title"
                    app:layout_constraintBottom_toTopOf="@id/tvProtTitleCollapsed"
                    app:layout_constraintEnd_toEndOf="@id/tvProtTitleCollapsed"
                    app:layout_constraintStart_toStartOf="@id/tvProtTitleCollapsed"
                    tools:text="35" />

                <TextView
                    android:id="@+id/tvProtTitleCollapsed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_light"
                    android:text="@string/main_screen_topbar_prot"
                    android:textColor="@color/gray3"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@id/tvCaloriesTitleCollapsed"
                    app:layout_constraintEnd_toStartOf="@+id/tvFatTitleCollapsed"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/tvCaloriesTitleCollapsed" />

                <TextView
                    android:id="@+id/tvFatCollapsed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/total_title"
                    app:layout_constraintBottom_toTopOf="@id/tvFatTitleCollapsed"
                    app:layout_constraintEnd_toEndOf="@id/tvFatTitleCollapsed"
                    app:layout_constraintStart_toStartOf="@id/tvFatTitleCollapsed"
                    tools:text="10" />

                <TextView
                    android:id="@+id/tvFatTitleCollapsed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_light"
                    android:text="@string/main_screen_topbar_fat"
                    android:textColor="@color/gray3"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@id/tvCaloriesTitleCollapsed"
                    app:layout_constraintEnd_toStartOf="@+id/tvCarboTitleCollapsed"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/tvProtTitleCollapsed" />

                <TextView
                    android:id="@+id/tvCarboCollapsed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/total_title"
                    app:layout_constraintBottom_toTopOf="@id/tvCarboTitleCollapsed"
                    app:layout_constraintEnd_toEndOf="@id/tvCarboTitleCollapsed"
                    app:layout_constraintStart_toStartOf="@id/tvCarboTitleCollapsed"
                    tools:text="125" />

                <TextView
                    android:id="@+id/tvCarboTitleCollapsed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_light"
                    android:text="@string/main_screen_topbar_carbo"
                    android:textColor="@color/gray3"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@id/tvCaloriesTitleCollapsed"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/tvFatTitleCollapsed" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/vpEatingTimeLine"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="90dp" />
        </LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
