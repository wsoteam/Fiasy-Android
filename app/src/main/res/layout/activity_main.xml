<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkWithoutAlfa"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/mainappbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_for_main_collapsing"
        android:fitsSystemWindows="true"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:elevation="5dp">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbarLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleMarginEnd="5dp"
            app:expandedTitleMarginStart="5dp"
            app:expandedTitleTextAppearance="@style/TextAppearance.AppCompat.Subhead"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <com.github.lzyzsd.circleprogress.ArcProgress
                    android:id="@+id/apCollapsingKcal"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginEnd="8dp"
                    app:arc_bottom_text="Калории"
                    app:arc_bottom_text_size="17sp"
                    app:arc_finished_color="@color/white"
                    app:arc_max="2000"
                    app:arc_progress="1900"
                    app:arc_stroke_width="2dp"
                    app:arc_suffix_text="ккал"
                    app:arc_suffix_text_padding="20dp"
                    app:arc_text_color="@color/textColor"
                    app:arc_text_size="45sp"
                    app:arc_unfinished_color="@color/little_transparent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.github.lzyzsd.circleprogress.ArcProgress
                    android:id="@+id/apCollapsingProt"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="24dp"
                    app:arc_bottom_text="Белки"
                    app:arc_bottom_text_size="9sp"
                    app:arc_finished_color="@color/white"
                    app:arc_max="1000"
                    app:arc_progress="0"
                    app:arc_stroke_width="3dp"
                    app:arc_suffix_text="@string/gramm"
                    app:arc_text_color="@color/textColor"
                    app:arc_text_size="20sp"
                    app:arc_unfinished_color="@color/little_transparent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/apCollapsingCarbo"
                    app:layout_constraintTop_toTopOf="@+id/apCollapsingCarbo" />

                <com.github.lzyzsd.circleprogress.ArcProgress
                    android:id="@+id/apCollapsingCarbo"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="8dp"
                    app:arc_bottom_text="Углеводы"
                    app:arc_bottom_text_size="9sp"
                    app:arc_finished_color="@color/white"
                    app:arc_max="1000"
                    app:arc_progress="0"
                    app:arc_stroke_width="3dp"
                    app:arc_suffix_text="@string/gramm"
                    app:arc_text_color="@color/textColor"
                    app:arc_text_size="20sp"
                    app:arc_unfinished_color="@color/little_transparent"
                    app:layout_constraintEnd_toStartOf="@+id/apCollapsingProt"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/apCollapsingFat"
                    app:layout_constraintTop_toBottomOf="@+id/apCollapsingKcal" />

                <com.github.lzyzsd.circleprogress.ArcProgress
                    android:id="@+id/apCollapsingFat"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="16dp"
                    app:arc_bottom_text="Жиры"
                    app:arc_bottom_text_size="9dp"
                    app:arc_finished_color="@color/white"
                    app:arc_max="1000"
                    app:arc_progress="0"
                    app:arc_stroke_width="3dp"
                    app:arc_suffix_text="@string/gramm"
                    app:arc_text_color="@color/textColor"
                    app:arc_text_size="20sp"
                    app:arc_unfinished_color="@color/little_transparent"
                    app:layout_constraintEnd_toStartOf="@+id/apCollapsingCarbo"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/apCollapsingCarbo" />


                <TextView
                    android:id="@+id/tvCircleProgressProt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:text="Белки"
                    android:textColor="@color/textColor"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@+id/apCollapsingProt"
                    app:layout_constraintStart_toStartOf="@+id/apCollapsingProt"
                    app:layout_constraintTop_toBottomOf="@+id/apCollapsingProt" />

                <TextView
                    android:id="@+id/tvCircleProgressCarbo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="48dp"
                    android:text="Углеводы"
                    android:textColor="@color/textColor"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/apCollapsingCarbo"
                    app:layout_constraintStart_toStartOf="@+id/apCollapsingCarbo"
                    app:layout_constraintTop_toBottomOf="@+id/apCollapsingCarbo" />

                <TextView
                    android:id="@+id/tvCircleProgressFat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:text="Жиры"
                    android:textColor="@color/textColor"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@+id/apCollapsingFat"
                    app:layout_constraintStart_toStartOf="@+id/apCollapsingFat"
                    app:layout_constraintTop_toBottomOf="@+id/apCollapsingFat" />

                <ImageView
                    android:id="@+id/ivCollapsingMainCompleteWater"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/image_complete_tick"
                    android:visibility="gone"
                    tools:layout_editor_absoluteX="318dp"
                    tools:layout_editor_absoluteY="94dp" />


            </android.support.constraint.ConstraintLayout>

            
        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <FrameLayout
            android:id="@+id/llHead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <ImageButton
                android:id="@+id/ibOpenYesterday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|left"
                android:backgroundTint="@color/white"
                android:paddingLeft="16dp"
                android:paddingTop="8dp"
                android:paddingRight="16dp"
                android:paddingBottom="8dp"
                android:src="@drawable/left_arrow" />

            <TextView
                android:id="@+id/tvDateForMainScreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/ibOpenTomorrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:backgroundTint="@color/white"
                android:paddingLeft="16dp"
                android:paddingTop="8dp"
                android:paddingRight="16dp"
                android:paddingBottom="8dp"
                android:src="@drawable/right_arrow" />

        </FrameLayout>


        <android.support.v4.view.ViewPager
            android:id="@+id/vpEatingTimeLine"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    </LinearLayout>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabAddEating"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:maxImageSize="14dp"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:scaleType="center"
        android:src="@drawable/fab_main_act_add"
        app:backgroundTint="@color/fab_main_activity"
        app:borderWidth="0dp"
        app:elevation="8dp" />
</android.support.design.widget.CoordinatorLayout>
