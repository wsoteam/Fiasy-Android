<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wsoteam.diet.presentation.profile.norm.ChangeNormActivity"
    android:focusable="true"
    android:background="@color/white"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:id="@+id/normalHeader"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageButton
            android:id="@+id/ibBack"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="8dp"
            android:background="@drawable/filter_state"
            android:padding="16dp"
            app:srcCompat="@drawable/arrow_back_gray" />

        <TextView
            android:id="@+id/textView54"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/calorie_intake"
            android:textColor="@color/black_for_txt"
            android:textSize="20sp"
            android:layout_weight="1"
            app:layout_constraintBottom_toBottomOf="@+id/imageView13"
            app:layout_constraintStart_toEndOf="@+id/ibBack"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.47" />

        <TextView
            android:id="@+id/normalSave"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingHorizontal="16dp"
            android:textColor="@color/search_icon_grey"
            android:text="@string/save"
            android:enabled="false"
            android:textAllCaps="true" />


    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:translationY="-10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/normalHeader">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="3dp"
                app:cardCornerRadius="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilSex"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="42dp"
                        app:errorTextAppearance="@style/TextInputStyle.Error.ChangeNorm"
                        app:hintTextAppearance="@style/TextInputStyle.Hint.ChangeNorm">

                        <EditText
                            android:id="@+id/edtSex"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:enabled="false"
                            android:focusableInTouchMode="false"
                            android:fontFamily="@font/roboto_medium"
                            android:hint="@string/gender"
                            android:inputType="textCapSentences"
                            android:maxLength="50"
                            android:text="@string/profile_male"
                            android:textColor="#80424242"
                            android:textSize="16sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilHeight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        app:errorTextAppearance="@style/TextInputStyle.Error.ChangeNorm"
                        app:hintTextAppearance="@style/TextInputStyle.Hint.ChangeNorm">

                        <EditText
                            android:id="@+id/edtHeight"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:fontFamily="@font/roboto_medium"
                            android:hint="@string/growth"
                            android:inputType="number"
                            android:maxLength="3"
                            android:textColor="#d9424242"
                            android:textSize="16sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilWeight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        app:errorTextAppearance="@style/TextInputStyle.Error.ChangeNorm"
                        app:hintTextAppearance="@style/TextInputStyle.Hint.ChangeNorm">

                        <EditText
                            android:id="@+id/edtWeight"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:fontFamily="@font/roboto_medium"
                            android:hint="@string/weight"
                            android:inputType="numberDecimal"
                            android:maxLength="5"
                            android:textColor="#d9424242"
                            android:textSize="16sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilAge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        app:errorTextAppearance="@style/TextInputStyle.Error.ChangeNorm"
                        app:hintTextAppearance="@style/TextInputStyle.Hint.ChangeNorm">

                        <EditText
                            android:id="@+id/edtAge"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:fontFamily="@font/roboto_medium"
                            android:hint="@string/age"
                            android:inputType="number"
                            android:maxLength="3"
                            android:textColor="#d9424242"
                            android:textSize="16sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilActivity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        app:errorTextAppearance="@style/TextInputStyle.Error.ChangeNorm"
                        app:hintTextAppearance="@style/TextInputStyle.Hint.ChangeNorm">

                        <EditText
                            android:id="@+id/edtActivity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusableInTouchMode="false"
                            android:fontFamily="@font/roboto_medium"
                            android:hint="@string/activity"
                            android:text="@string/five_activity"
                            android:textColor="#d9424242"
                            android:textSize="16sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilGoal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        app:errorTextAppearance="@style/TextInputStyle.Error.ChangeNorm"
                        app:hintTextAppearance="@style/TextInputStyle.Hint.ChangeNorm">

                        <EditText
                            android:id="@+id/edtGoal"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginLeft="3dp"
                            android:background="@color/transparent"
                            android:focusableInTouchMode="false"
                            android:fontFamily="@font/roboto_medium"
                            android:hint="@string/target"
                            android:inputType="textCapSentences"
                            android:text="@string/fourth_target"
                            android:textColor="#d9424242"
                            android:textSize="16sp" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <include
                android:id="@+id/include5"
                layout="@layout/premium_norm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/nativeAd" />

            <com.wsoteam.diet.ads.nativetemplates.TemplateView
                android:id="@+id/nativeAd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:gnt_template_type="@layout/gnt_small_template_view"
                app:layout_constraintTop_toBottomOf="@+id/cardView18"
                tools:layout_editor_absoluteX="0dp"
                tools:visibility="visible" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
