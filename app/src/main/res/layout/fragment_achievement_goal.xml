<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fafafa"
    android:orientation="vertical"
    >
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@drawable/fake_card_rounded_bottoms"
      android:elevation="2dp"
      android:orientation="vertical"
      android:paddingBottom="24dp"
      android:translationZ="2dp"
      >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:navigationIcon="@drawable/ic_prem_back"
        app:title="@string/title_achievement"
        >

      <ImageView
          android:id="@+id/achievement_info"
          android:layout_width="48dp"
          android:layout_height="48dp"
          android:layout_gravity="right"
          android:layout_marginRight="6dp"
          android:padding="12dp"
          android:scaleType="fitXY"
          app:srcCompat="@drawable/ic_meas_info"
          />

    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:id="@+id/achievement_scaled_icon"
        android:layout_width="180dp"
        android:layout_height="160dp"
        android:layout_gravity="center_horizontal"
        android:padding="8dp"
        android:src="@drawable/ic_achievement_locked_wait"
        />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:lineSpacingExtra="4.5sp"
        android:textColor="#c0000000"
        android:textSize="18sp"
        android:textStyle="normal"
        tools:text="Неутомимый перчик"
        />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="24dp"
        android:fontFamily="sans-serif"
        android:gravity="left"
        android:lineSpacingExtra="4.2sp"
        android:textColor="#c0000000"
        android:textSize="14sp"
        android:textStyle="normal"
        tools:text="Вести учет калорий, значит быстрее двигаться к намеченной цели. Так держать, не останавливайтесь! Заберите свою награду."
        />
  </LinearLayout>

  <RelativeLayout
      android:id="@+id/unlocked"
      android:orientation="horizontal"
      android:layout_marginLeft="24dp"
      android:layout_marginRight="24dp"
      android:layout_marginTop="16dp"
      android:weightSum="3"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

    <TextView
        android:id="@+id/helper_time_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:fontFamily="sans-serif"
        android:textStyle="normal"
        android:textColor="#c0000000"
        android:lineSpacingExtra="3.5sp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:layout_toLeftOf="@+id/goal_timer"
        android:text="@string/time_left_till_achievement_finish"
        />

    <TextView
        android:id="@+id/goal_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:fontFamily="sans-serif-medium"
        android:layout_toLeftOf="@id/goal_timer_help"
        android:layout_marginTop="8dp"
        android:textStyle="normal"
        android:textColor="#4c4c4c"
        android:letterSpacing="-0.01"
        tools:text="06ч : 32м : 02с"
        />

    <ImageView
        android:id="@+id/goal_timer_help"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:padding="2dp"
        android:src="@drawable/ic_left_settings_item_help"
        android:layout_marginLeft="4dp"
        android:layout_alignParentRight="true"
        />

    <ImageView
        android:id="@+id/achievement_level"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:padding="4dp"
        android:layout_below="@id/helper_time_left"
        tools:srcCompat="@drawable/ic_evolve_map_2"
        />

    <com.wsoteam.diet.achievements.AchievementDetailedProgress
        android:id="@+id/achievement_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/achievement_level"
        android:layout_toRightOf="@id/achievement_level"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/achievement_progress"
        android:layout_alignRight="@id/achievement_progress"
        android:layout_below="@id/achievement_progress"
        android:layout_marginTop="4dp"
        android:textSize="12sp"
        style="@style/TextAppearance.AppCompat.Caption"
        tools:text="Дата старта: 28.08.2020"
        />

  </RelativeLayout>

  <TextView
      android:id="@+id/locked"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:text="@string/achievement_locked_keep_going"
      android:layout_marginLeft="24dp"
      android:layout_marginRight="24dp"
      android:visibility="gone"
      android:gravity="center"
      />

</LinearLayout>