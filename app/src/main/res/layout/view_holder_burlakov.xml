<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

  <ImageView
      android:id="@+id/imageView64"
      android:layout_width="0dp"
      android:layout_height="130dp"
      android:layout_marginBottom="16dp"
      android:scaleType="centerCrop"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/burlakov_banner"
      />
  <TextView
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:layout_marginBottom="32dp"
      android:layout_marginEnd="42dp"
      android:layout_marginStart="42dp"
      android:layout_marginTop="32dp"
      android:fontFamily="sans-serif"
      android:letterSpacing="0.02"
      android:lineSpacingExtra="0.6sp"
      android:text="Статьи от диетолога Александра Бурлакова"
      android:textAlignment="center"
      android:textColor="@color/white"
      android:textSize="24sp"
      android:textStyle="bold"
      app:layout_constraintBottom_toBottomOf="@+id/imageView64"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="@+id/imageView64"
      />
</androidx.constraintlayout.widget.ConstraintLayout>