<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="310dp"
        android:layout_height="480dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/background_empty_fragment"
        app:cardCornerRadius="5dp"
        app:cardElevation="8dp">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_gravity="center"
            app:cardCornerRadius="5dp">

            <ImageView
                android:layout_width="149dp"
                android:layout_height="151dp"
                android:layout_marginTop="24dp"
                android:layout_gravity="center_horizontal|top"
                android:src="@drawable/img_head_empty_fragment" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_light"
                android:textSize="16sp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:text="Извините, данный раздел находится в разработке."/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_light"
                android:textSize="14sp"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="48dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:text="Еще чуть-чуть и вам откроется кладезь полезной информации :)"/>


        </android.support.v7.widget.CardView>


    </android.support.v7.widget.CardView>

</FrameLayout>