<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="@string/onboard_activity_title"
        android:textColor="#de2b2b2b"
        android:textSize="20sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvSubTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/onboard_activity_subtitle"
        android:textColor="#de2b2b2b"
        android:textSize="20sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"/>

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/ivImage"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        app:layout_constraintBottom_toTopOf="@+id/pbActivity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSubTitle"
        app:srcCompat="@drawable/ic_activity0"/>

    <View
        android:id="@+id/line1"
        android:layout_width="1dp"
        android:layout_height="19dp"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="14dp"
        android:background="#ef7d02"
        app:layout_constraintBottom_toBottomOf="@id/pbActivity"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@id/pbActivity"/>

    <View
        android:id="@+id/line2"
        android:layout_width="1dp"
        android:layout_height="19dp"
        android:layout_marginBottom="14dp"
        android:background="#ef7d02"
        app:layout_constraintBottom_toBottomOf="@id/pbActivity"
        app:layout_constraintEnd_toStartOf="@+id/line3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/line1"/>

    <View
        android:id="@+id/line3"
        android:layout_width="1dp"
        android:layout_height="19dp"
        android:layout_marginBottom="14dp"
        android:background="#ef7d02"
        app:layout_constraintBottom_toBottomOf="@id/pbActivity"
        app:layout_constraintEnd_toStartOf="@+id/line4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/line2"/>

    <View
        android:id="@+id/line4"
        android:layout_width="1dp"
        android:layout_height="19dp"
        android:layout_marginBottom="14dp"
        android:background="#ef7d02"
        app:layout_constraintBottom_toBottomOf="@id/pbActivity"
        app:layout_constraintEnd_toStartOf="@+id/line5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/line3"/>

    <View
        android:id="@+id/line5"
        android:layout_width="1dp"
        android:layout_height="19dp"
        android:layout_marginBottom="14dp"
        android:background="#ef7d02"
        app:layout_constraintBottom_toBottomOf="@id/pbActivity"
        app:layout_constraintEnd_toStartOf="@+id/line6"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/line4"/>

    <View
        android:id="@+id/line6"
        android:layout_width="1dp"
        android:layout_height="19dp"
        android:layout_marginBottom="14dp"
        android:background="#ef7d02"
        app:layout_constraintBottom_toBottomOf="@id/pbActivity"
        app:layout_constraintEnd_toStartOf="@+id/line7"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/line5"/>

    <View
        android:id="@+id/line7"
        android:layout_width="1dp"
        android:layout_height="19dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="14dp"
        android:background="#ef7d02"
        app:layout_constraintBottom_toBottomOf="@id/pbActivity"
        app:layout_constraintEnd_toEndOf="@id/pbActivity"
        app:layout_constraintHorizontal_bias="0.5"/>

    <android.support.v7.widget.AppCompatSeekBar
        android:id="@+id/pbActivity"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="254dp"
        android:layout_marginEnd="16dp"
        android:max="6"
        android:maxHeight="12dp"
        android:minHeight="12dp"
        android:progressDrawable="@drawable/bg_seekbar_water"
        android:splitTrack="false"
        android:thumb="@drawable/thumb_seekbar"
        android:thumbOffset="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSubTitle"/>

    <TextView
        android:id="@+id/tvActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="sans-serif"
        android:textColor="@color/water_text_black"
        android:textSize="14sp"
        android:textStyle="normal"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pbActivity"
        tools:text="Минимальная нагрузка"/>

    <Button
        android:id="@+id/btnNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="10dp"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        android:text="@string/auth_data_btn_next"
        android:textAllCaps="true"
        android:textColor="@color/orange1"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>