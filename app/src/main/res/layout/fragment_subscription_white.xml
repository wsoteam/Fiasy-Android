            tools:context="com.wsoteam.diet.InApp.ActivitySubscription">

            <androidx.cardview.widget.CardView
                android:id="@+id/cvSub3mBack"
                android:layout_width="0dp"
                android:layout_height="69dp"
                android:layout_marginStart="22dp"
                android:layout_marginEnd="22dp"
                app:cardBackgroundColor="@color/frame_whire_premium"
                app:cardCornerRadius="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/cvSub3m"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/cvSub3m" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cvSub12mBack"
