<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="65dp"
    android:layout_marginEnd="16dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <EditText
            android:id="@+id/auth_phone_et_number"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="68dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="69dp"
            android:ems="10"
            android:hint="@string/auth_main_phone_hint_phone"
            android:inputType="phone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/auth_phone_tv" />

        <EditText
            android:id="@+id/auth_phone_et_code"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="68dp"
            android:layout_marginTop="23dp"
            android:layout_marginEnd="69dp"
            android:clickable="false"
            android:ems="10"
            android:enabled="false"
            android:hint="@string/auth_main_phone_hint_code"
            android:inputType="number"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/auth_phone_et_number" />

        <TextView
            android:id="@+id/auth_phone_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="147dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="147dp"
            android:text="@string/auth_main_phone_text_set_number"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/auth_phone_btn_cancel"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="@string/auth_main_phone_btn_cancel"
            app:layout_constraintEnd_toEndOf="@+id/auth_phone_et_code"
            app:layout_constraintTop_toBottomOf="@+id/auth_phone_et_code" />

        <Button
            android:id="@+id/auth_phone_btn_ok"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="@string/auth_main_phone_btn_send"
            app:layout_constraintStart_toStartOf="@+id/auth_phone_et_code"
            app:layout_constraintTop_toBottomOf="@+id/auth_phone_et_code" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
