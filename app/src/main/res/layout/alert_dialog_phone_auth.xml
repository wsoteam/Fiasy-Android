<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <TextView
                android:id="@+id/auth_phone_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="147dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="147dp"
                android:text="@string/auth_main_phone_text_set_number"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <EditText
                android:id="@+id/auth_phone_et_number"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="68dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="69dp"
                android:ems="10"
                android:hint="@string/auth_main_phone_hint_phone"
                android:inputType="phone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/auth_phone_tv"/>

            <EditText
                android:id="@+id/auth_phone_et_code"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="68dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="69dp"
                android:clickable="false"
                android:ems="10"
                android:enabled="false"
                android:hint="@string/auth_main_phone_hint_code"
                android:inputType="phone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/auth_phone_et_number"/>

            <Button
                android:id="@+id/auth_phone_btn_cancel"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/aler_dialog_phone_auth_btn_background"
                android:elevation="8dp"
                android:text="@string/auth_main_phone_btn_cancel"
                android:textColor="@android:color/white"
                app:layout_constraintEnd_toEndOf="@+id/auth_phone_et_code"
                app:layout_constraintTop_toBottomOf="@+id/auth_phone_et_code"/>

            <Button
                android:id="@+id/auth_phone_btn_ok"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/aler_dialog_phone_auth_btn_background"
                android:elevation="8dp"
                android:text="@string/auth_main_phone_btn_send"
                android:textColor="@android:color/white"
                app:layout_constraintStart_toStartOf="@+id/auth_phone_et_code"
                app:layout_constraintTop_toBottomOf="@+id/auth_phone_et_code"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>
