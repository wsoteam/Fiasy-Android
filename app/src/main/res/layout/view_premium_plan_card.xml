<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="16dp"
    tools:layout_height="wrap_content"
    tools:parentTag="androidx.cardview.widget.CardView"
    tools:layout_marginLeft="16dp"
    tools:layout_marginRight="16dp"
    tools:layout_marginTop="16dp"
    tools:layout_marginBottom="16dp"
    >
  <FrameLayout
      android:id="@+id/container"
      android:layout_width="match_parent"
      android:layout_height="173dp"
      android:orientation="vertical"
      >

    <ImageView
        android:id="@+id/diamond_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="32dp"
        app:srcCompat="@drawable/ic_silver_diamond"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="16dp"
        android:orientation="vertical"
        >

      <TextView
          android:id="@+id/duration"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:fontFamily="sans-serif"
          android:lineSpacingExtra="4sp"
          android:textColor="#a6000000"
          android:textSize="16sp"
          android:textStyle="bold"
          android:layout_gravity="right"
          tools:text="3 месяца"
          />

      <TextView
          android:id="@+id/price"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:fontFamily="sans-serif"
          android:lineSpacingExtra="18sp"
          android:layout_gravity="right"
          android:textColor="#c0000000"
          android:textSize="32sp"
          android:textStyle="bold"
          tools:text="949₽"
          />

      <TextView
          android:id="@+id/helper"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:fontFamily="sans-serif"
          android:lineSpacingExtra="4.2sp"
          android:layout_gravity="right"
          android:textColor="#8a000000"
          android:textSize="14sp"
          android:textStyle="normal"
          tools:text="316₽/месяц"
          />

    </LinearLayout>
  </FrameLayout>
</merge>