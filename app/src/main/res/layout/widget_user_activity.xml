<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:parentTag="com.wsoteam.diet.presentation.activity.ActivityWidget"
    >

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.AppCompat.Title"
        android:textSize="20sp"
        android:text="@string/widget_user_activity_title"
        android:padding="16dp"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/action_show_all"
        />

    <TextView
        android:id="@+id/action_show_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:textColor="@color/orange_light3"
        android:layout_alignParentRight="true"
        android:text="@string/all"
        android:textSize="18sp"
        tools:drawableRight="@drawable/ic_arrow_forward_white_24dp"
        tools:drawableTint="@color/orange_light3"
        android:drawablePadding="8dp"
        />

    <LinearLayout
        android:id="@+id/empty_state"
        android:layout_below="@+id/title"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:paddingBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:srcCompat="@drawable/ic_empty_activities_running_man"
          />

      <TextView
          android:id="@+id/empty_description"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="16dp"
          android:gravity="center"
          android:lineSpacingExtra="4dp"
          android:text="@string/widget_activity_question"
          android:textColor="#80424242"
          android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/activities_container"
        android:layout_below="@id/title"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
      
    </LinearLayout>

  </RelativeLayout>

</merge>