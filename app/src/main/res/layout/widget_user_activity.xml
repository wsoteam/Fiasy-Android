<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:parentTag="com.wsoteam.diet.presentation.activity.ActivityWidget"
    >

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.AppCompat.Title"
        android:text="@string/widget_user_activity_title"
        android:padding="16dp"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/action_show_all"
        />

    <TextView
        android:id="@+id/action_show_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:textColor="@color/orange"
        android:layout_alignParentRight="true"
        android:text="@string/widget_user_activity_show_all"
        android:textSize="18sp"
        tools:drawableRight="@drawable/ic_arrow_forward_white_24dp"
        tools:drawableTint="@color/orange"
        android:drawablePadding="8dp"
        />

    <LinearLayout
        android:id="@+id/activities_container"
        android:layout_below="@id/title"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    </LinearLayout>


  </RelativeLayout>

</merge>