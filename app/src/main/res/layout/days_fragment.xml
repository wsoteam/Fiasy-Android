        app:srcCompat="@drawable/ic_icons_plus_weight" />

    <ImageButton
        android:id="@+id/ivAddSunday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/tvSunday"
        app:layout_constraintEnd_toEndOf="@+id/tvSunday"
        app:layout_constraintStart_toStartOf="@+id/tvSunday"
        app:layout_constraintTop_toTopOf="@+id/tvSunday"
