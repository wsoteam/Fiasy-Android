<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    >
  <RelativeLayout
      android:focusable="true"
      android:clickable="true"
      android:background="#fff"
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:background="@drawable/gradient_main"
        android:layout_alignParentTop="true"
        app:navigationIcon="@drawable/back_arrow_icon_white"
        app:title="Создать Активность"
        app:titleTextColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/activity_poster"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:src="@drawable/undraw_track_and_field_33_qn"
        android:layout_marginTop="8dp"
        />

    <AutoCompleteTextView
        android:id="@+id/activity_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="16dp"
        android:hint="@string/add_user_activity_hint"
        android:layout_below="@id/activity_poster"
        android:textColor="@color/orange1"
        android:textSize="24sp"
        android:inputType="textMultiLine|textCapSentences"
        android:lines="3"
        android:minLines="1"
        android:maxLength="100"
        tools:text="Танцы"
        />

    <TextView
        android:id="@+id/activity_duration_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_name"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="24dp"
        android:textSize="18sp"
        android:fontFamily="@font/roboto_medium"
        android:gravity="left"
        android:text="Время тренировки"
        style="@style/TextAppearance.AppCompat.Body2"
        />

    <TextView
        android:id="@+id/activity_duration_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_duration_title"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="32dp"
        android:textColor="#51000000"
        android:textSize="14sp"
        android:fontFamily="@font/roboto_medium"
        android:gravity="left"
        android:text="Передвигая ползунком, выбирите то количество времени, которое вы потратили на актинвость"
        style="@style/TextAppearance.AppCompat.Caption"
        />

    <TextView
        android:id="@+id/activity_duration_selected"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:textSize="20sp"
        android:gravity="center_horizontal"
        tools:text="15 минут"
        android:layout_below="@id/activity_duration_description"
        />

    <com.wsoteam.diet.views.RulerSeekBar
        android:id="@+id/activity_duration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_duration_selected"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:thumbTint="@color/orange"
        android:progressTint="@color/orange"
        android:secondaryProgressTint="@color/grey_500"
        android:max="60"
        android:progress="30"
        />

    <TextView
        android:id="@+id/activity_ccal_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_duration"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="24dp"
        android:textSize="18sp"
        android:fontFamily="@font/roboto_medium"
        android:gravity="left"
        android:text="Количество калорий"
        style="@style/TextAppearance.AppCompat.Body2"
        />

    <TextView
        android:id="@+id/activity_ccal_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_ccal_title"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:textColor="#51000000"
        android:textSize="14sp"
        android:fontFamily="@font/roboto_medium"
        android:gravity="left"
        android:text="Введите количество калорий, которые потратили или думайте, что потратили"
        style="@style/TextAppearance.AppCompat.Caption"
        />

    <view
        class="com.wsoteam.diet.presentation.activity.CreateUserActivityFragment$BlockedEditText"
        android:id="@+id/activity_ccal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:gravity="left"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:fontFamily="@font/roboto_medium"
        android:textSize="20sp"
        android:inputType="numberSigned"
        android:digits="123456789"
        android:textColor="@color/orange1"
        android:layout_below="@id/activity_ccal_description"
        android:maxLength="12"
        tools:text="500 калорий"
        />

    <Button
        android:id="@+id/action_done"
        style="@style/Question.NextButton"
        android:layout_below="@id/activity_ccal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="@string/action_done"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/action_done"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="32dp"
        android:lineSpacingExtra="4dp"
        android:textSize="16sp"
        android:visibility="visible"
        android:textColor="#80424242"
        android:gravity="center"
        android:text="@string/add_user_activity_warning"
        />
  </RelativeLayout>
</androidx.core.widget.NestedScrollView>