<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wsoteam.diet.Articles.ItemArticleActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/testID"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardElevation="10dp">

                <ImageView
                    android:id="@+id/imgArticleWP"
                    android:layout_width="match_parent"
                    android:layout_height="309dp"
                    android:scaleType="center"
                    app:srcCompat="@android:color/holo_blue_bright" />
            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/tvTitleArticleWP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="12dp"
                tools:text="Title" />

            <TextView
                android:id="@+id/tvIntroArticleWP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                tools:text="Intro" />

            <View
                android:id="@+id/divider20"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
                android:paddingBottom="30dp" />


            <TextView
                android:id="@+id/tvArticlePremText"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/roboto_bold"
                android:paddingTop="20dp"
                android:paddingBottom="30dp"
                android:text="@string/tvArticlePremText"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="#7993B2"
                android:textSize="18sp" />


            <android.support.v7.widget.CardView
                android:id="@+id/cardView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                app:cardBackgroundColor="#EFA61C"
                app:cardCornerRadius="25dp"
                app:layout_constraintBottom_toBottomOf="@+id/ivRecipe"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivRecipe">

                <Button
                    android:id="@+id/goPremArticle"
                    android:layout_width="238dp"
                    android:layout_height="match_parent"
                    android:background="#00FFFFFF"
                    android:padding="2dp"
                    android:text="@string/btnRecipePrem"
                    android:textColor="@android:color/white" />
            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/tvMainArticleWP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="40dp"
                android:layout_marginHorizontal="12dp"
                android:lines="32"
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Main" />

        </LinearLayout>
    </ScrollView>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#32000000"
        android:minHeight="?android:attr/actionBarSize"
        android:theme="@style/Toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
