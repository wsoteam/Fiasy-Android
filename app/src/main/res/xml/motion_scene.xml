<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/starting_set">
        <Constraint
            android:id="@+id/cvPremium"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/cardView"/>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/ending_set">
        <Constraint
            android:id="@+id/cvPremium"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/cardView" />
    </ConstraintSet>

    <Transition
        motion:constraintSetStart="@+id/starting_set"
        motion:constraintSetEnd="@+id/ending_set"
        motion:duration="1000">

        <KeyFrameSet>
            <KeyAttribute
                android:elevation="8dp"
                android:translationX="100dp"
                motion:framePosition="10"
                motion:motionTarget="@id/cvPremium" />
        </KeyFrameSet>

        <OnClick motion:targetId="@id/ibSettingsPremClose" />
    </Transition>

</MotionScene>